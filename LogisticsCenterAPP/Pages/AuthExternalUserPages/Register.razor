@page "/RegisterUser"
@using LogisticsCenterAPP.Services
@using Microsoft.AspNetCore.Authorization
@inject IWebServices webServices
@attribute [Authorize]
<EditForm Model="External_User_Model" OnSubmit="@Submit">
  <div class="container">
      <h1>Create User</h1>
       <div class="row col-md-6">
            <div class="form-group">
                <label class="form-label">Username</label>
                <div>
                    <input @bind-value="External_User_Model.UserName" type="text" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <div>
                    <input @bind-value="External_User_Model.Password" type="text" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">First Name</label>
                <div>
                    <input @bind-value="External_User_Model.FirstName" type="text" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Last Name</label>
                <div>
                    <input @bind-value="External_User_Model.LastName" type="text" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Supplier</label>
                <div>
                    <InputSelect id="ListSupplier" @bind-Value="@Id" class="form-control">
                        @foreach (var supplier in ListSupplier)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </InputSelect>
                </div>
            </div>
            <button class="btn btn-success" type="submit">Submit</button>
       </div>
  </div>
</EditForm>

